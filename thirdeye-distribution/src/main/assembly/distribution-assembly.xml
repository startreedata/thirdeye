<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/bash</directory>
      <outputDirectory>bin/</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/config</directory>
      <outputDirectory>config/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/scripts</directory>
      <outputDirectory>bin/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-ui/dist</directory>
      <outputDirectory>ui/</outputDirectory>
    </fileSet>

    <!-- Copy all plugins -->
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-plugin-example/target/thirdeye-plugin-example-${project.version}-dist</directory>
      <outputDirectory>plugins/example/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-datasources/target/thirdeye-datasources-${project.version}-dist</directory>
      <outputDirectory>plugins/datasources-default/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-pinot/target/thirdeye-pinot-${project.version}-dist</directory>
      <outputDirectory>plugins/datasource-pinot/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-detection-components/target/thirdeye-detection-components-${project.version}-dist</directory>
      <outputDirectory>plugins/detection-components/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-kafka/target/thirdeye-kafka-${project.version}-dist</directory>
      <outputDirectory>plugins/kafka/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-notification-email/target/thirdeye-notification-email-${project.version}-dist</directory>
      <outputDirectory>plugins/notification-email/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-contributors-cube/target/thirdeye-contributors-cube-${project.version}-dist</directory>
      <outputDirectory>plugins/contributors-cube/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-contributors-simple/target/thirdeye-contributors-simple-${project.version}-dist</directory>
      <outputDirectory>plugins/contributors-simple/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-bootstrap-open-core/target/thirdeye-bootstrap-open-core-${project.version}-dist</directory>
      <outputDirectory>plugins/bootstrap-open-core/</outputDirectory>
    </fileSet>

  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <excludes>
        <exclude>*:sources</exclude>
      </excludes>
      <fileMode>0644</fileMode>
    </dependencySet>
  </dependencySets>
</assembly>
