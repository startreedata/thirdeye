<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/bash</directory>
      <outputDirectory>bin/</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/config</directory>
      <outputDirectory>config/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/scripts</directory>
      <outputDirectory>bin/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-ui/dist</directory>
      <outputDirectory>ui/</outputDirectory>
    </fileSet>

    <!-- Copy all plugins -->
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-plugin-example/target/thirdeye-plugin-example-${project.version}-dist</directory>
      <outputDirectory>plugins/example/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-plugins/thirdeye-datasources/target/thirdeye-datasources-${project.version}-dist</directory>
      <outputDirectory>plugins/datasources-default/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${thirdeye.root}/thirdeye-detection-components/target/thirdeye-detection-components-${project.version}-dist</directory>
      <outputDirectory>plugins/detection-components/</outputDirectory>
    </fileSet>

  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <excludes>
        <exclude>*:sources</exclude>
      </excludes>
      <fileMode>0644</fileMode>
    </dependencySet>
  </dependencySets>
</assembly>
