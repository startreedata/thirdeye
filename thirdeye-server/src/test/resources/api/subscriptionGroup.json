[
  {
    "name": "my-sg",
    "cron": "*/1 * * * * ?",
    "alerts": [
      {
        "id": 15263
      }
    ],
    "notificationSchemes": {
      "email": {
        "to": [
          "pyne.suvodeep@gmail.com"
        ]
      }
    }
  },
  {
    "name": "sg-with-spec",
    "cron": "*/1 * * * * ?",
    "specs": [
      {
        "type": "email-smtp",
        "params": {
          "smtp": {
            "host": "${SMTP_HOST}",
            "port": "${SMTP_PORT}",
            "user": "${SMTP_USER}",
            "password": "${SMTP_PASSWORD}"
          },
          "from": "no-reply@startree.ai",
          "to": [
            "pyne.suvodeep@gmail.com"
          ]
        }
      }
    ]
  }
]
