{
    // Use Prettier as default code formatter and enable formatting on save
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true, // Run ESLint on save
        "source.fixAll.stylelint": true, // Run stylelint on save
        "source.organizeImports": true // Organize imports on save
    },

    // Indentations purely based on linters and file formatters, not based on existing occurrences
    "editor.detectIndentation": false,
    "editor.tabSize": 4,

    // Ignore searching in ignored files
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true
}
